<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="dev.kotatsu.rcptry2.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="dev.kotatsu.rcptry2.commands.category"
            name="Sample Command"
            id="dev.kotatsu.rcptry2.commands.flashCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="dev.kotatsu.rcptry2.handlers.FlashHandler"
            commandId="dev.kotatsu.rcptry2.commands.flashCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="dev.kotatsu.rcptry2.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="dev.kotatsu.rcptry2.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="dev.kotatsu.rcptry2.commands.flashCommand"
                  id="dev.kotatsu.rcptry2.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="dev.kotatsu.rcptry2.toolbars.sampleToolbar">
            <command
                  commandId="dev.kotatsu.rcptry2.commands.flashCommand"
                  id="dev.kotatsu.rcptry2.toolbars.flashCommand"
                  label="Flash hex"
                  mnemonic="Flash hex"
                  tooltip="Flash hex">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?before=group.edit">
         <command
               commandId="dev.kotatsu.rcptry2.commands.flashCommand"
               label="Flash hex"
               style="push">
			   <visibleWhen checkEnabled="false">
			       <iterate ifEmpty="false" operator="or">
			           <test property="org.eclipse.core.resources.name" value="*hex"></test>
			       </iterate>
		       </visibleWhen>
         </command>

      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="dev.kotatsu.rcptry2.startup.Startup">
      </startup>
   </extension>

</plugin>
